:global {
  html {
    font-family: "Comic Sans MS";
    background-image: url("../assets/money.jpg");
  }
}

.person {
  border: 5px solid rgb(0, 0, 0);
  border-radius: 15px;
  padding: 1em;
  margin: 1em 0;
  transition: 0.5s all;

  &:hover {
    border-radius: 25px;
  }
}

.male {
  background-color: rgb(200, 200, 255);
}

.female {
  background-color: rgb(255, 200, 200);
}
