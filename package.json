{
  "name": "@dr-kobros/hardcore-react-training",
  "version": "6.0.0",
  "description": "A two day hardcore React workshop for professionals",
  "main": "src",
  "scripts": {
    "build": "cross-env NODE_ENV=production vite build",
    "lint": "eslint src",
    "start": "cross-env NODE_ENV=development vite",
    "preview": "cross-env NODE_ENV=production vite preview",
    "test": "cross-env VITE_API=http://localhost/erp VITE_APPID=test jest",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pekkis/hardcore-react-training"
  },
  "keywords": [
    "React",
    "training"
  ],
  "author": "Pekkis",
  "license": "MIT",
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx",
      "tsx",
      "ts"
    ],
    "transform": {
      "\\.tsx?$": [
        "babel-jest"
      ]
    },
    "setupFilesAfterEnv": [
      "<rootDir>/src/jest/setup.js"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css)$": "<rootDir>/__mocks__/styleMock.js",
      "\\.(pcss)$": "identity-obj-proxy"
    }
  },
  "dependencies": {
